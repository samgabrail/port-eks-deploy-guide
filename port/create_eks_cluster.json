{
    "identifier": "eks_create_eks_cluster",
    "title": "Create an EKS cluster",
    "icon": "AmazonEKS",
    "description": "An action that creates an eks cluster",
    "trigger": {
      "type": "self-service",
      "operation": "CREATE",
      "userInputs": {
        "properties": {
          "cluster_name": {
            "title": "Cluster Name",
            "description": "The name of the EKS Cluster",
            "icon": "AmazonEKS",
            "type": "string"
          },
          "region": {
            "icon": "DefaultProperty",
            "title": "Region",
            "type": "string",
            "blueprint": "region",
            "format": "entity"
          }
        },
        "required": [
          "cluster_name",
          "region"
        ],
        "order": [
          "cluster_name",
          "region"
        ]
      },
      "blueprintIdentifier": "eks"
    },
    "invocationMethod": {
      "type": "GITHUB",
      "org": "your_org_name",
      "repo": "your_repo_name",
      "workflow": "manage-eks-cluster.yml",
      "workflowInputs": {
        "{{if (.inputs | has(\"ref\")) then \"ref\" else null end}}": "{{.inputs.\"ref\"}}",
        "{{if (.inputs | has(\"cluster_name\")) then \"cluster_name\" else null end}}": "{{.inputs.\"cluster_name\"}}",
        "{{if (.inputs | has(\"region\")) then \"region\" else null end}}": "{{.inputs.\"region\" | if type == \"array\" then map(.identifier) else .identifier end}}",
        "port_payload": {
          "action": "{{ .action.identifier[(\"eks_\" | length):] }}",
          "resourceType": "run",
          "status": "TRIGGERED",
          "trigger": "{{ .trigger | {by, origin, at} }}",
          "context": {
            "entity": "{{.entity.identifier}}",
            "blueprint": "{{.action.blueprint}}",
            "runId": "{{.run.id}}"
          },
          "payload": {
            "entity": "{{ (if .entity == {} then null else .entity end) }}",
            "action": {
              "invocationMethod": {
                "type": "GITHUB",
                "org": "AnujDevEnviro",
                "repo": "port-eks-deploy-guide",
                "workflow": "manage-eks-cluster.yml",
                "omitUserInputs": false,
                "omitPayload": false,
                "reportWorkflowStatus": true
              },
              "trigger": "{{.trigger.operation}}"
            },
            "properties": {
              "{{if (.inputs | has(\"cluster_name\")) then \"cluster_name\" else null end}}": "{{.inputs.\"cluster_name\"}}",
              "{{if (.inputs | has(\"region\")) then \"region\" else null end}}": "{{.inputs.\"region\" | if type == \"array\" then map(.identifier) else .identifier end}}"
            },
            "censoredProperties": "{{.action.encryptedProperties}}"
          }
        }
      },
      "reportWorkflowStatus": true
    },
    "requiredApproval": false,
    "publish": true
  }
